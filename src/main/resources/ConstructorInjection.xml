<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="studentDetails" class="com.constructorInjection.StudentDetails">
        <property name="studentName" value="Charan">

        </property>

        <property name="studentRollNumber" value="238911f00303">

        </property>
    </bean>

    <bean id="student" class="com.constructorInjection.Student">
        <constructor-arg ref="studentDetails">

        </constructor-arg>
    </bean>

</beans>